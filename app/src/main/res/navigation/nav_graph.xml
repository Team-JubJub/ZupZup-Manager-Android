<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/frag_orderList">

    <fragment
        android:id="@+id/frag_orderList"
        android:name="com.example.zupzup_manager.ui.orderlist.OrderListFragment"
        android:label="OrderListFragment"
        tools:layout="@layout/fragment_order_list">
        <action
            android:id="@+id/action_frag_orderList_to_frag_orderDetail"
            app:destination="@id/frag_orderDetail" />
    </fragment>

    <fragment
        android:id="@+id/frag_orderDetail"
        android:name="com.example.zupzup_manager.ui.orderdetail.OrderDetailFragment"
        android:label="OrderDetailFragment"
        tools:layout="@layout/fragment_order_detail">
        <argument
            android:name="order"
            app:argType="com.example.zupzup_manager.domain.models.OrderModel"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/frag_management"
        android:name="com.example.zupzup_manager.ui.management.ManagementFragment"
        android:label="ManagementFragment"
        tools:layout="@layout/fragment_management" >
        <action
            android:id="@+id/action_frag_management_to_merchandiseDetailFragment"
            app:destination="@id/frag_merchandise_detail" />
    </fragment>
    <fragment
        android:id="@+id/frag_merchandise_detail"
        android:name="com.example.zupzup_manager.ui.merchandisedetail.MerchandiseDetailFragment"
        android:label="MerchandiseDetailFragment"
        tools:layout="@layout/fragment_merchandise_detail">
        <argument
            android:name="merchandise"
            android:defaultValue="@null"
            app:argType="com.example.zupzup_manager.domain.models.MerchandiseModel"
            app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/frag_setting"
        android:name="com.example.zupzup_manager.ui.setting.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_frag_setting_to_storeFragment"
            app:destination="@id/frag_store" />
    </fragment>
    <fragment
        android:id="@+id/frag_store"
        android:name="com.example.zupzup_manager.ui.store.StoreFragment"
        android:label="StoreFragment"
        tools:layout="@layout/fragment_store">
        <argument
            android:name="store"
            app:argType="com.example.zupzup_manager.domain.models.StoreModel"/>
    </fragment>
</navigation>