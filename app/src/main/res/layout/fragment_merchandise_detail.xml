<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.zupzup_manager.domain.models.MerchandiseModel"/>

        <variable
            name="merchandise"
            type="com.example.zupzup_manager.domain.models.MerchandiseModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.merchandisedetail.MerchandiseDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_prev_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="제품 관리"
                android:textColor="@color/main"
                app:layout_constraintBottom_toBottomOf="@id/btn_back"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintTop_toTopOf="@id/btn_back" />

            <TextView
                android:id="@+id/tv_merchandise_management_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{merchandise != null ? merchandise.itemName : `제품 등록`}"
                tools:text="초코 크로와상"
                style="@style/UIHero"
                app:layout_constraintEnd_toStartOf="@id/iv_remove_merchandise"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_back" />

            <ImageView
                android:id="@+id/iv_remove_merchandise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_trash"
                android:paddingVertical="8dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_merchandise_management_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_merchandise_management_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/sv_merchandise"
            android:layout_width="match_parent"
            android:layout_marginTop="39dp"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_merchandise"
                    android:layout_width="match_parent"
                    android:layout_height="358dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/warm_gray3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_image"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_merchandise"
                    app:layout_constraintEnd_toEndOf="@+id/iv_merchandise" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@drawable/frame_rectangle_corner_14_warmgray_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_merchandise">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="메뉴"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="@{merchandise != null ? merchandise.itemName : ``}"
                        tools:text="초코 크로와상"
                        android:background="@null"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@drawable/frame_rectangle_corner_14_warmgray_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_menu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="판매가격"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="@{merchandise != null ? String.valueOf(merchandise.price)+`원` : ``}"
                        tools:text="3,000원"
                        android:background="@null"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_discounted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@drawable/frame_rectangle_corner_14_warmgray_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_price">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="할인가격"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="@{merchandise != null ? String.valueOf(merchandise.discounted)+`원` : ``}"
                        tools:text="1,500원"
                        android:background="@null"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@drawable/frame_rectangle_corner_14_warmgray_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_discounted">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="수량"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/pure_black"
                        android:letterSpacing="-0.03"
                        android:text="@{merchandise != null ? String.valueOf(merchandise.stock) : ``}"
                        tools:text="1"
                        android:background="@null"
                        android:textSize="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_modify_button"
            android:layout_marginBottom="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_modify_reservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingVertical="21dp"
                android:background="@drawable/frame_rectangle_corner_14_main"
                android:text="@{merchandise != null ? `수정하기` : `등록하기`}"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="17dp"
                android:textColor="@color/off_white"/>
        </LinearLayout>

    </LinearLayout>
</layout>