<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.zupzup_manager.ui.setting.SettingViewModel" />

        <variable
            name="clickListener"
            type="com.example.zupzup_manager.ui.setting.SettingFragment.SettingClickListener" />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            tools:context=".ui.setting.SettingFragment">

            <TextView
                android:id="@+id/tv_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="설정"
                style="@style/UIHero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_store_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_page_title">

                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="가게"
                    style="@style/UIH3" />

                <LinearLayout
                    android:id="@+id/ll_store_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp"
                    android:background="@drawable/frame_stroke_rect_corner_16_ivorygray_200_100"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_store_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_day"
                        tools:background="@drawable/ic_day"/>
<!--                        android:background="@{viewModel.storeStatus ? @drawable/ic_day : @drawable/ic_night}"-->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="가게 영업"
                            android:textColor="@color/orange_400"
                            style="@style/UICaptionSmall"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="지금 영업 중이에요!"
                            style="@style/UISubhead"/>
<!--                            android:text="@{viewModel.storeStatus ? `지금 영업 중이에요!` : `지금은 문을 닫았어요`}"-->

                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/toggleBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_toggle"
                        android:onClick="@{_ -> clickListener.onToggleBtnClick()}"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textOff=""
                        android:textOn=""/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_store_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp"
                    android:onClick="@{_ -> clickListener.navigateToStore()}"
                    android:background="@drawable/frame_stroke_rect_corner_16_ivorygray_200_100"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/ic_store"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_arrow_right" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="가게 이름"
                        style="@style/UIH3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="영업 시간"
                            android:textColor="@color/orange_400"
                            style="@style/UICaptionSmall"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="09:00 ~ 21:00"
                            style="@style/UIHeadline"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="금요일 휴무"
                            android:textColor="@color/ivory_gray_400"
                            style="@style/UICaptionSmall"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="할인 시간"
                            android:textColor="@color/orange_400"
                            style="@style/UICaptionSmall"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12:00 ~ 13:00"
                            style="@style/UIHeadline"/>
                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_store_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp"
                    android:background="@drawable/frame_stroke_rect_corner_16_ivorygray_200_100"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_notice"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="공지사항"
                            android:textColor="@color/orange_400"
                            style="@style/UICaptionSmall"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="안녕하세요. 저희 집은 150년 비법 간독대진갈비만을"
                            android:ellipsize="end"
                            android:maxLines="1"
                            style="@style/UISubhead"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_arrow_right"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_store_section">

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="23dp"
                    android:text="계정"
                    style="@style/UIH3" />

                <include layout="@layout/layout_account_menu"
                    android:id="@+id/service_center"
                    app:titleText="@{`고객 센터`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ivory_gray_200"/>

                <include layout="@layout/layout_account_menu"
                    android:id="@+id/change_location"
                    app:titleText="@{`가게 위치 이전`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ivory_gray_200"/>

                <include layout="@layout/layout_account_menu"
                    android:id="@+id/logout"
                    app:titleText="@{`로그아웃`}"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>