<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="com.example.zupzup_manager.ui.reservationdetail.ReservationDetailFragmentClickListener" />

        <variable
            name="adapter"
            type="com.example.zupzup_manager.ui.reservationdetail.recyclerview.ReservationDetailRcvAdapter" />

        <variable
            name="viewModel"
            type="com.example.zupzup_manager.ui.reservationdetail.ReservationDetailViewModel" />

        <variable
            name="bindingHelper"
            type="com.example.zupzup_manager.ui.reservationdetail.binding.ReservationDetailBindingHelper" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.reservationdetail.ReservationDetailFragment">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{_ -> handler.onBackBtnClick()}"
            android:layout_marginStart="7dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_prev_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            style="@style/UIBody"
            android:text="이전으로"
            android:textColor="@color/tangerine_300"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_cartList_title"
            style="@style/UIHero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{viewModel.reservationDetailHeader.title}"
            android:textColor="@color/pure_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            tools:text="제품제품제품제품제품제품" />

        <TextView
            android:id="@+id/tv_reserve_date"
            style="@style/SUBHEADSubhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/ivory_gray_300"
            app:detailReserveId="@{viewModel.reservationDetailHeader.reserveId}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cartList_title"
            tools:text="2022년 11월 22일 09:41" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_reservation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:adapter="@{adapter}"

            android:paddingVertical="10dp"
            app:layout_constraintBottom_toTopOf="@id/constraint_confirm_state_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_reserve_date"
            app:reservationDetailBody="@{viewModel.reservationDetailBody}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_confirm_state_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/rcv_reservation"
            app:layout_constraintStart_toStartOf="@id/rcv_reservation"
            app:layout_constraintTop_toBottomOf="@id/rcv_reservation">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_reservation"
                style="@style/UIHeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_rectangle_corner_14_main"
                android:onClick="@{() -> bindingHelper.createReservationConfirmBottomSheet(viewModel.reservationDetailHeader,viewModel.reservationDetailBody)}"
                android:text="예약 확정하기"
                android:textColor="@color/pure_black"
                android:visibility="@{viewModel.reservationDetailHeader.state.equals(`NEW`) ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reservation_cancel"
                style="@style/UIHeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8.5dp"
                android:background="@drawable/frame_rectangle_corner_14_neutral_gray_150"
                android:onClick="@{_ -> handler.cancelReservation(viewModel.reservationDetailHeader.reserveId)}"
                android:text="취소"
                android:textColor="@color/neutral_gray_400"
                android:textSize="17sp"
                android:visibility="@{viewModel.reservationDetailHeader.state.equals(`CONFIRM`) ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_reservation_complete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reservation_complete"
                style="@style/UIHeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.5dp"
                android:background="@drawable/frame_rectangle_corner_14_main"
                android:onClick="@{_ -> handler.completeReservation(viewModel.reservationDetailHeader.reserveId)}"
                android:text="완료"
                android:textColor="@color/text_black"
                android:textSize="17sp"
                android:visibility="@{viewModel.reservationDetailHeader.state.equals(`CONFIRM`) ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_reservation_cancel"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>